import com.sun.org.apache.xalan.internal.xsltc.compiler.If;

public class PrintPatterns {

	public static void main(String[] args) {
		/*
		 * * * *
		 * * * *
		 * * * *
		 * * * *
		 */
		
		for(int i=1;i<=4;i++)
		{
			for(int j=1;j<=4;j++)
			{
				System.out.print("* "); // we used System.out.print to print in one line
			}
			System.out.println("");
		}
		
		System.out.println("===============================");
		
		/*
		 * 
		 * * 
		 * * * 
		 * * * *
		 */
		
		for(int i=1;i<=4;i++)
		{
			for(int j=1;j<=i;j++)
			{
				System.out.print("* "); // we used System.out.print to print in one line
			}
			System.out.println("");
		}
		
System.out.println("===============================");
		
		/*
		 * * * *
		 *     *
		 *     *
		 * * * *
		 */
		
		for(int i=1;i<=4;i++)
		{
			for(int j=1;j<=i;j++)
			{
				
				if(i==1||i==4||j==1||j==4){
				System.out.print("* "); // we used System.out.print to print in one line
				}
				else {
					
					System.out.print(" ")
				}
				
				}
			System.out.println("");
		}

	}

}
